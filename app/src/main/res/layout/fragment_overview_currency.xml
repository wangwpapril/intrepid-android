<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/content">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:id="@+id/overview_image"
            android:src="@drawable/overview_currency" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/overview_content"
            android:layout_below="@+id/overview_image"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/base_currency_icon"
                android:src="@drawable/example_icon"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center"
                android:layout_marginLeft="30dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="CAD"
                android:id="@+id/destination_subtitle"
                android:textStyle="bold"
                android:textColor="#333f48"
                android:textSize="23sp"
                />


            <EditText
                android:id="@+id/destination_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:hint="number"
                android:textColorHint="@color/light_gray"
                android:textColor="#383838"
                android:textSize="23sp"
                android:inputType="numberDecimal"
                android:singleLine="true"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/overview_content1"
            android:layout_below="@+id/overview_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/base_currency_icon1"
                android:src="@drawable/example_icon"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center"
                android:layout_marginStart="30dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="USD"
                android:id="@+id/destination_subtitle1"
                android:textStyle="bold"
                android:textColor="#333f48"
                android:textSize="23sp"
                />


            <EditText
                android:id="@+id/destination_content1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:hint="number"
                android:textColorHint="@color/light_gray"
                android:textColor="#383838"
                android:textSize="23sp"
                android:inputType="numberDecimal"
                android:singleLine="true"
                />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>
</LinearLayout>