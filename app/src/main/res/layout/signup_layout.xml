<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_login">
    
    <include
    android:layout_width="fill_parent"
    android:layout_height="@dimen/custom_title_height"
    layout="@layout/custom_title"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/include" />


    <LinearLayout
                android:id="@+id/inputLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:paddingTop="10dip"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:layout_below="@+id/include"
                android:layout_marginRight="30dip"
                android:layout_marginLeft="30dip">


        <EditText
            android:id="@+id/firstNameEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dip"
            android:ems="10"
            android:gravity="left"
            android:hint="FIRST NAME"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="#00000000"
            android:inputType="text" >

        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="@color/gray"
            />

        <EditText
            android:id="@+id/lastNameEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dip"
            android:ems="10"
            android:gravity="left"
            android:textColorHint="@color/white"
            android:hint="LAST NAME"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="#00000000"
            android:inputType="text" >

        </EditText>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/gray"
            />


        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dip"
            android:ems="10"
            android:gravity="left"
            android:hint="EMAIL"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="#00000000"
            android:inputType="textEmailAddress" >

        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/gray"
            />

        <AutoCompleteTextView
            android:id="@+id/countryEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dip"
            android:ems="10"
            android:maxLines="1"
            android:completionThreshold="1"
            android:cursorVisible="false"
            android:editable="false"
            android:gravity="left"
            android:hint="COUNTRY"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="#00000000"
            >

        </AutoCompleteTextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/gray"
            />


        <EditText
            android:id="@+id/userNameEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dip"
            android:ems="10"
            android:gravity="left"
            android:hint="USERNAME"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="#00000000"
            android:inputType="text" >

        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/gray"
            />


        <EditText
            android:id="@+id/PasswordEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dip"
            android:ems="10"
            android:gravity="left"
            android:hint="PASSWORD"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="#00000000"
            android:inputType="textPassword" >

        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/gray"
            />

        <EditText
            android:id="@+id/policyNumberEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dip"
            android:ems="10"
            android:gravity="left"
            android:hint="POLICY NUMBER"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="#00000000"
            android:inputType="number" >

        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/gray"
            />

       </LinearLayout>

    <Button
        android:id="@+id/butSignUp"
        android:layout_gravity="center"
        android:text="SIGN UP"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_btn"
        android:longClickable="false"
        android:clickable="true"
        android:adjustViewBounds="true"
        android:layout_below="@+id/inputLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/info"
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/butSignUp"
        android:paddingTop="0dp"
        android:paddingLeft="60dip"
        android:paddingRight="60dip"
        android:gravity="center_horizontal"
        android:text="By registering for or using any portion of the Services, I accept the"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/termsofUse"
        android:layout_marginTop="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms of Use"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/info"
        android:linksClickable="false" />


</RelativeLayout>
