<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_background">
    
    <include
    android:layout_width="fill_parent"
    android:layout_height="@dimen/custom_title_height"
    layout="@layout/custom_title" />
        
    <RelativeLayout
	    android:id="@+id/scrollView1"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginBottom="0dip">

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_alignParentBottom="true" 
	        android:orientation="vertical" >
	        
	        <ImageView
		        android:id="@+id/logo"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dip"
		        android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:paddingTop="10dip"
                android:paddingBottom="10dip"
		        android:src="@drawable/logo3" />
	        
	        <TextView
				android:id="@+id/travel_smart"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@+id/logo"
				android:layout_marginTop="5dip"
				android:paddingTop="0dip"
				android:gravity="center_horizontal"
				android:text="TRAVEL SMART"
			    android:textColor="@color/white"
                android:textSize="25sp"				
				android:textAppearance="?android:attr/textAppearanceSmall" />
	        
		    
				<LinearLayout
				    android:id="@+id/inputLayout"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="20dip"
				    android:paddingTop="10dip"
				    android:orientation="vertical"
				    android:gravity="center_horizontal" >
				    
			
				    <EditText
				        android:id="@+id/signinEmailEditText"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_horizontal"
				        android:layout_marginTop="5dip"
				        android:ems="10"
				        android:gravity="left"
				        android:hint="EMAIL"
				        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:background="#00000000"
				        android:inputType="textEmailAddress" >

				    </EditText>
		
				    <EditText
				        android:id="@+id/signinPasswordEditText"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_horizontal"
				        android:layout_marginTop="15dip"
				        android:layout_marginBottom="15dip"
				        android:ems="10"
				        android:gravity="left"
				        android:hint="PASSWORD"
				        android:textSize="20sp"
                        android:background="#00000000"
				        android:inputType="textPassword" >

				    </EditText>
		   		</LinearLayout>

				<Button 
				    android:id="@+id/butSignIn"
				    android:layout_marginTop="0dip"
				    android:background="@color/gray"
				    android:layout_gravity="center_horizontal"
				    android:text="LOG IN"
				    android:gravity="center_vertical"
				    android:paddingLeft="50dip"
                    android:paddingRight="50dip"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"/>
 					
 				 <TextView
				android:id="@+id/sign_up"
				android:layout_marginTop="10dip"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingTop="0dp"
				android:gravity="center_horizontal"
				android:text="Sign Up"
			    android:textColor="@color/white"
                android:textSize="25sp"				
				android:textAppearance="?android:attr/textAppearanceSmall" />
	        
 			<FrameLayout
 			    	android:id="@+id/LoginHelp"
 			    	android:layout_marginTop="50dip"
 			    	android:orientation="horizontal"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:layout_gravity="bottom"
				    android:layout_alignParentBottom="true" 
				    >
			    					
				<TextView
				    android:id="@+id/termsofuse"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="left"
				    android:text="Terms of Use"
				    android:textSize="16sp" />
	        
				<TextView
				    android:id="@+id/learnMore"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="right"
				    android:text="Learn More"
				    android:textSize="16sp" />
				</FrameLayout>

			    </LinearLayout>
	</RelativeLayout>

</LinearLayout>
