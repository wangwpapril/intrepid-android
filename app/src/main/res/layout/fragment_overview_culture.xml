<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:id="@+id/overview_image"
            />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/overview_content"
            android:layout_below="@+id/overview_image"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Cultural Overview"
                android:id="@+id/destination_subtitle"
                android:layout_alignParentStart="false"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/section_icon"
                android:textColor="#333f48" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Mexico is bordered to the north by the states of California, Arizona, New Mexico, and Texas, to the west and south by the Pacific Ocean, to the east by the Gulf of Mexico, and to the southeast by Belize, Guatemala, and the Caribbean Sea. "
                android:id="@+id/destination_content"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="false"
                android:layout_below="@+id/destination_subtitle"
                android:layout_marginTop="10dp"
                android:textColor="#333f48" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/section_icon"
                android:layout_above="@+id/destination_content"
                android:layout_alignParentEnd="false"
                android:layout_alignTop="@+id/destination_subtitle"
                android:src="@drawable/example_icon"
                android:layout_marginRight="10dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/overview_content2"
            android:layout_below="@+id/overview_content"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Ethnic Makeup"
                android:id="@+id/destination_subtitle2"
                android:layout_alignParentStart="false"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/section_icon2"
                android:textColor="#333f48" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/destination_content2"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="false"
                android:layout_below="@+id/destination_subtitle2"
                android:layout_marginTop="10dp"
                android:textColor="#333f48" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/section_icon2"
                android:layout_above="@+id/destination_content2"
                android:layout_alignParentEnd="false"
                android:layout_alignTop="@+id/destination_subtitle2"
                android:src="@drawable/example_icon"
                android:layout_marginRight="10dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/overview_content3"
            android:padding="16dp"
            android:layout_below="@+id/overview_content2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Language"
                android:id="@+id/destination_subtitle3"
                android:layout_alignParentStart="false"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/section_icon3"
                android:textColor="#333f48" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="On the Iberian Peninsula in Southwestern Europe, between the North Atlantic Ocean and the Mediterranean Sea, and bordering Portugal to the west and France to the north.  The official currency of Spain is the euro. Euros are readily available at banks and currency exchange services.  The necessity of a visa is dependent on nationality. Canadians and Americans in addition to many European nations do not require a visa for tourism to Spain for up to 90 days. Business visits do not require visas. Spain is a member of the Schengen Agreement.  Domestic and international telecommunications are both highly developed. Cellular and internet service is widely available. Spain's international country code is 34.  Spain retains much of its historic architecture. City cores are developed although conditions may be somewhat untidy at times. Tap water is safe for direct consumption, although the water in the east and south may taste heavily of alkaline. Castilian Spanish is the official language, spoken by 74% of residents. Other languages include Catalan, Galician, and Basque.  Spaniards are known for their relaxed and friendly mannerisms. They are very patriotic and loyal to their country. Spaniards often extend physical gestures such as hugs to greet one another. However, avoid this with strangers as it may be a ruse to pickpocket. Tipping is not customary in Spain. "
                android:id="@+id/destination_content3"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="false"
                android:layout_below="@+id/destination_subtitle3"
                android:layout_marginTop="10dp"
                android:textColor="#333f48" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/section_icon3"
                android:layout_above="@+id/destination_content3"
                android:layout_alignParentEnd="false"
                android:layout_alignTop="@+id/destination_subtitle3"
                android:src="@drawable/example_icon"
                android:layout_marginRight="10dp" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
</LinearLayout>