<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/common_page_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/triplist_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/custom_title_height"
        layout="@layout/custom_title" />
 
    <EditText
        android:id="@+id/title_name_et"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/gray"
        android:cursorVisible="true"
        android:drawableLeft="@drawable/search_title"
        android:drawablePadding="10dip"
        android:hint="Tap to Search"
        android:paddingLeft="10dip"
        android:textColor="#4b4b4b"
        android:textCursorDrawable="@null"
 	 />
    
    <ListView
        android:id="@+id/trip_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@color/common_list_divider"
        android:dividerHeight="@dimen/common_list_divider_height"
        android:scrollbars="none" />

</LinearLayout>