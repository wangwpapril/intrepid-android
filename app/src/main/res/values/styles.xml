<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- Application theme. -->
    <style name = "ListViewStyle">
        <item name="android:divider">@drawable/divder</item>
        <item name="android:dividerHeight">@dimen/divier_height</item>
        <item name="android:cacheColorHint">@null</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
        <item name="background">@drawable/nav_bg</item>
    </style>
    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
    </style>
    <style name = "ButtonStyle">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:layout_width">150dip</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/pink</item>
    </style>
    <style name="common_page_background">
        <item name="android:background">#f3f3f3</item>
    </style>
</resources>
